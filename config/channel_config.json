{
  "sampling_rate": 512,
  "channel_mapping": {
    "ch0": {
      "sensor": "EMG",
      "enabled": true,
      "label": "EMG Channel 0"
    },
    "ch1": {
      "sensor": "EOG",
      "enabled": true,
      "label": "EOG Channel 1"
    }
  },
  "filters": {
    "EMG": {
      "type": "high_pass",
      "cutoff": 70.0,
      "order": 4,
      "enabled": true
    },
    "EOG": {
      "type": "low_pass",
      "cutoff": 10.0,
      "order": 4,
      "enabled": true
    },
    "EEG": {
      "filters": [
        {
          "type": "notch",
          "freq": 50.0,
          "Q": 30,
          "enabled": true
        },
        {
          "type": "bandpass",
          "low": 0.5,
          "high": 45.0,
          "order": 4,
          "enabled": true
        }
      ]
    }
  },
  "adc_settings": {
    "bits": 14,
    "vref": 3300.0,
    "sync_byte_1": "0xC7",
    "sync_byte_2": "0x7C",
    "end_byte": "0x01"
  },
  "ui_settings": {
    "window_seconds": 5.0,
    "update_interval_ms": 30,
    "graph_height": 8,
    "y_axis_limits": [
      -2000,
      2000
    ]
  }
}